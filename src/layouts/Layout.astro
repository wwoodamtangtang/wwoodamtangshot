---
interface Props {
  title?: string;
}

const { title = "wwoodamtangshot" } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
  </head>
<body class="antialiased bg-slate-50 text-slate-800 dark:bg-slate-900 dark:text-slate-200">
    <main class="container mx-auto px-1">
      <slot />
    </main>
  </body>
</html>
